<%= provide :title, t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t "wellcome" %></h1>

  <h2>
    <%= t "this_is_the_home_page_for_the" %>
    <%= link_to t("rails_tut"), Settings.url.rails_tut %>
    <%= t "sample_application" %>
  </h2>

  <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png"), Settings.url.rails %>
<% end %>